<div align="center">
	<div class="user-info">

		<p>
			<strong>Email : </strong><%= @user.email %>
		</p>

		<p>
			<strong>Username : </strong><%= @user.username %>
		</p>

	</div>
</div>

<table class="table table-striped" style="text-align: center;">
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Page Count</th>
		</tr>
	</thead>

	<tbody>
		
		<% @user.books.where(tradeable: true).each do |book| %>
			<tr id='<%= book.id %>' onclick="onClickFunction(this.id)">
				<td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.pagecount %></td>
      </tr>
		<% end %>
		
	</tbody>
</table>

<script>
  function onClickFunction(parametre)
  {
    window.location = '/books/'+parametre;
  }
 </script>
<style>
	.user-info{
		border: solid black 2px;
		border-radius: 10px;
		padding: 10px;
		margin: 10px;
		width: 300px;
	}
  table tr td:nth-child(2){
    color:blue;
    text-decoration:underline;
  }
  table tr:hover{
    background-color:lightblue !important;
    cursor:pointer;
  }
</style>